<div class="container mx-auto p-4">
  <div id="home-left-panel">
    <img src="../images/x-logo.jpg">
  </div>
  <div id="home-right-panel">
    <h1 class="text-3xl font-bold text-center">Happening now</h1>
    <% if (user) { %>
      <a href="/profile">
        <div class="text-violet-600 hover:underline underline-offset-4 decoration-2 hover:underline decoration-violet-500">
          Profile
        </div>
      </a>

      <a href="/log-out">
        <div class="text-violet-600 hover:underline underline-offset-4 decoration-2 hover:underline decoration-violet-500">
          Log out
        </div>
      </a>

    <% } else { %>
      <a href="/log-in">
        <div class="text-blue-600 hover:underline underline-offset-4 decoration-2 hover:underline decoration-violet-500">
          Log in
        </div>
      </a>
    <% } %>
  </div>
</div>
